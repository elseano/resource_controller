<h1>Editing <%= resource_controller_options[:object_name] || model_name %></h1>

<%= error_messages_for model_name.to_sym %>

<% form_for(model_name.to_sym, :url => object_url, :html => { :method => :put }) do |f| %>
  <%= render "form", :form => f %>
  
  <% if has_own_partial?("info") %>
    <% render "info" %>
  <% end %>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', object_url %> |
<%= link_to 'Back', collection_url %>